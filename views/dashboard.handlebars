<div class="row text-light">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4 text-light">
  <div class="col-md-6">
    <h3>Write a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button id="newPostButton" type="submit" class="btn btn-success">Create</button>
      </div>
    </form>
  </div>

  
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>
    {{#if posts.length}}
    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/post/{{post.id}}">{{post.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button id="deletePostButton" class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
    {{/if}}
  </div>
</div>

<script src="/js/dashboard.js"></script>
