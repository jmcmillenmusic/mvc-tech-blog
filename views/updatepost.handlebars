{{!-- Form for updating existing posts --}}
{{#if logged_in}}
<div class="row mb-4 text-light">
  <div class="col-md-12">
    <h2>Update an Existing Post:</h2>
    <h3>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h3>
    <form class="form updating-post-form">
      <div class="form-group">
        <label for="post-title">Post Title:</label>
        <input class="form-input" type="text" id="update-title" name="update-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Content:</label>
        <textarea class="form-input" id="update-content" name="update-content"></textarea>
      </div>
      <div class="form-group">
        <button id="updatePostButton" type="submit" class="btn btn-warning">Update</button>
      </div>
    </form>
    {{!-- <p>{{post.content}}</p>
    <p>Written by {{post.user.name}} on {{format_date post.date_created}}</p> --}}
  </div>
</div>

<script src="/js/updatepost.js"></script>
{{/if}}