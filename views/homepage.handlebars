<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 text-light">
  <div class="col-md-12">
    <h2 >
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>{{post.content}}</p>
    <p>Written by {{post.user_id}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}
